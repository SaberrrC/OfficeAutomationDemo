<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_frame"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="@dimen/common_margin"
        android:text="@string/dialog_defalut_text_title"
        android:textColor="@color/black_99"
        android:textSize="@dimen/text_size16"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="80dp"
        android:padding="@dimen/common_margin">

        <EditText
            android:id="@+id/dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_edittext_bg"
            android:hint="@string/dialog_please_write_content"
            android:maxHeight="180dp"
            android:textSize="@dimen/text_size16" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/horizontal_spacing5"
            android:text="@string/common_text_no"
            android:textSize="@dimen/text_size16" />

        <View
            android:id="@+id/button_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/dialog_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/horizontal_spacing5"
            android:text="@string/common_text_yes"
            android:textSize="@dimen/text_size16" />

    </LinearLayout>

</LinearLayout>