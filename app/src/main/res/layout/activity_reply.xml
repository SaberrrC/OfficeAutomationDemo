<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        />

    <include layout="@layout/toolbar_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/work_report_reply_et_bg"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        >

        <EditText
            android:id="@+id/et_reply"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入内容(最多100字)"
            android:maxLength="100"
            android:minHeight="200dp"
            android:textColor="#333333"
            android:textColorHint="#a1a1a1"
            android:textSize="@dimen/text_common_dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_voice_input"
            android:layout_width="216dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/launch_workreport_voice_input"
            android:text="点击进行语音录入"
            android:textColor="@color/white"
            android:textSize="@dimen/text_common_dp"
            />

    </RelativeLayout>
    <!--2017-04-05 这块功能暂时注释掉-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/ll_pictures"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_pic_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="点击上传图片"
            android:textColor="#0EA7ED"
            android:textSize="@dimen/text_common_dp"
            />

    </LinearLayout>
</LinearLayout>