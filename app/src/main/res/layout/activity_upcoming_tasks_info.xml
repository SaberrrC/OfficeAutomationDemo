<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_upcoming_tasks_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fafbfc"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/toolbar_image_btn"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/toolbar_text_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:clickable="true"
            android:gravity="center_vertical|right"
            android:textColor="#333333"
            android:textSize="@dimen/text_common_dp"
            android:visibility="gone"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>

                <TextView
                    android:id="@+id/tv_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="出差编码"
                    android:textColor="#151515"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/tv_id_title"
                    android:text="CC201710091351450916"
                    android:textColor="#898989"/>

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_id_title"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="* "
                    android:textAllCaps="false"
                    android:textColor="#E74256"/>

                <TextView
                    android:id="@+id/tv_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/tv_star"
                    android:layout_toRightOf="@+id/tv_star"
                    android:gravity="center"
                    android:text="出差类别"
                    android:textColor="#151515"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/tv_star"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/tv_type_title"
                    android:background="@drawable/shape_upcominginfo_bt_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="外出"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/date_selector_icon"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_apply_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_type"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:text="申请日期"
                    android:textColor="#151515"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_type"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/tv_apply_time_title"
                    android:text="2017-10-09"
                    android:textColor="#898989"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <include layout="@layout/commonality_initiate_approval_item"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="审批意见"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_opinion"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittext_input_square_bg"
                android:gravity="left"
                android:hint="请输入审批意见"
                android:padding="5dp"
                android:paddingLeft="12dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_check"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/white"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFEF"/>

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="86dp"
            android:background="@drawable/shape_upcoming_dialog_ok"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_disagree"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="86dp"
            android:background="@drawable/shape_upcominginfo_disagree"
            android:gravity="center"
            android:text="驳回"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

</LinearLayout>
