<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_common_dialog_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_input_square_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_common_type_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="@color/black_333333"
        android:textSize="16sp"
        tools:text="休假类别"/>

    <View
        android:id="@+id/tv_line_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_d5d5d5"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_selected_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>