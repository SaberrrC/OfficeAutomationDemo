<?xml version="1.0" encoding="utf-8"?>
<com.itcrm.GroupInformationPlatform.views.KeyboardLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <include layout="@layout/toolbar_shadow"/>

    <ScrollView
        android:id="@+id/report_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:id="@+id/report_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


                <RadioGroup
                    android:id="@+id/report_radioGroup"
                    android:layout_width="216dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:background="@drawable/work_report_list_btn_box_bg"
                    >


                    <RadioButton
                        android:id="@+id/report_rb_weekly"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="周报"
                        android:gravity="center"
                        android:background="@drawable/work_report_list_btn_bg_x"
                        android:textColor="@drawable/work_report_rb_tv_bg"
                        android:textSize="@dimen/text_common_dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#1a9afa"/>
                    <RadioButton
                        android:id="@+id/report_rb_monthly"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="月报"
                        android:background="@drawable/work_report_list_btn_bg_x"
                        android:textColor="@drawable/work_report_rb_tv_bg"
                        android:textSize="@dimen/text_common_dp"
                        />
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_ll_update_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汇报日期"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击选择开始时间"
                        android:textColor="#0EA7ED"
                        android:textSize="@dimen/text_common_dp"
                        />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="点击选择结束时间"
                        android:textColor="#0EA7ED"
                        android:textSize="@dimen/text_common_dp"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_monthly_geted_weekly_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                >

                <Button
                    android:id="@+id/tv_read_weekly"
                    android:layout_width="216dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="读取周报"
                    android:background="@drawable/btn_blue_round_bg"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_common_dp"
                    />


                    <TextView
                        android:id="@+id/tv_get_weekly_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:layout_marginTop="30dp"
                        android:text="汇报内容"
                        android:textColor="#333"
                        android:textSize="@dimen/text_common_dp"
                        android:visibility="gone"
                        />
                <EditText
                    android:id="@+id/et_geted_weekly"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/gray_rectangle_bg"
                    android:paddingBottom="16dp"
                    android:gravity="left"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_common_dp"
                    android:visibility="gone"
                    />

              <!--  <Button
                    android:id="@+id/btn_top_voice_input"
                    android:layout_width="142dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/launch_workreport_voice_input"
                    android:text="点击进行语音录入"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tv_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汇报内容"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />


            </LinearLayout>

            <EditText
                android:id="@+id/report_et"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_rectangle_bg"
                android:gravity="top|left"
                android:hint="填写工作内容，最多300字"
                android:maxLength="300"
                android:minHeight="103dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#333333"
                android:textColorHint="#cacacb"
                android:textCursorDrawable="@drawable/work_report_cursor_bg"
                android:textSize="@dimen/text_common_dp"
                />

            <Button
                android:id="@+id/btn_voice_input"
                android:layout_width="216dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:background="@drawable/btn_blue_round_bg"
                android:text="点击进行语音录入"
                android:textColor="@color/white"
                android:textSize="@dimen/text_common_dp"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_pictures"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="32dp"
                    >
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_add_pic_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="点击上传图片"
                    android:textSize="@dimen/text_common_dp"
                    android:textColor="#0EA7ED"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


            </LinearLayout>


            <TextView
                android:id="@+id/report_name"
                android:layout_marginLeft="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="接收人 ( 预设 ) : "
                android:textColor="#333"
                android:textSize="@dimen/text_common_dp"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/reporter_portrait"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="18dp"
                fresco:placeholderImage="@drawable/tab_me_head_default"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="5dp"
                />

            <TextView
                android:id="@+id/tv_leader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:textColor="#818283"
                android:textSize="@dimen/text_common_dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="37dp"
                >

                <TextView
                    android:id="@+id/report_tv_copy_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抄送人："
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <TextView
                    android:id="@+id/report_tv_copyTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/report_tv_copy_message"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/report_tv_copy_message"
                    android:paddingRight="24dp"
                    android:singleLine="false"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_common_dp"
                    />

                <ImageView
                    android:id="@+id/report_iv_add_person"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignBottom="@+id/report_tv_copyTo"
                    android:layout_alignRight="@+id/report_tv_copyTo"
                    android:src="@mipmap/send_add_bg"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</com.itcrm.GroupInformationPlatform.views.KeyboardLinearLayout>