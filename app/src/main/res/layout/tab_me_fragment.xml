<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/text_common_color"
            android:textSize="18dp"/>

    </RelativeLayout>

    <include
        layout="@layout/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_shadow"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingLeft="20dp"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_portrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    fresco:placeholderImage="@drawable/tab_me_head_default"
                    fresco:placeholderImageScaleType="fitXY"
                    fresco:roundBottomLeft="true"
                    fresco:roundBottomRight="true"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundingBorderColor="@android:color/white"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/user_portrait"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_common_color"
                        android:textSize="@dimen/text_common_dp"
                        />


                    <TextView
                        android:id="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_common_dark_color"
                        android:textSize="@dimen/text_common_dp"/>

                </LinearLayout>

            </RelativeLayout>

            <include
                layout="@layout/toolbar_shadow"
                />

            <RelativeLayout
                android:id="@+id/btn_about_us"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="关于我们"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tab_me_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_feedback"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="用户反馈"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tab_me_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_usinghelp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="使用帮助"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tab_me_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:onClick="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="版本升级"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="修改密码"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tab_me_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/tab_me_box_selector_bg_x"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17dp"
                    android:text="清除缓存"
                    android:textColor="@color/text_common_color"
                    android:textSize="@dimen/text_common_dp"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
