<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_upcoming_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:text="筛选"
            android:textAllCaps="false"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFEF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:text="提交时间"
            android:textColor="#898989"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all"
                style="@style/textview_upcoming_dialog"
                android:background="@drawable/shape_upcoming_dialog_item_bg_checked"
                android:text="全部"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/tv_today"
                style="@style/textview_upcoming_dialog"
                android:text="今天" />

            <TextView
                android:id="@+id/tv_three"
                style="@style/textview_upcoming_dialog"
                android:text="近三天" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_week"
                style="@style/textview_upcoming_dialog"
                android:text="近一周" />

            <TextView
                android:id="@+id/tv_mouth"
                style="@style/textview_upcoming_dialog"
                android:text="近一个月" />

            <TextView
                style="@style/textview_upcoming_dialog"
                android:text=""
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:id="@+id/stork"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#EFEFEF" />

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="状态"
                android:textColor="#898989" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all_state"
                    style="@style/textview_upcoming_dialog"
                    android:background="@drawable/shape_upcoming_dialog_item_bg_checked"
                    android:text="全部"
                    android:textColor="@color/color_white" />

                <TextView
                    android:id="@+id/tv_state_unchecked"
                    style="@style/textview_upcoming_dialog"
                    android:text="未审批" />


                <TextView
                    android:id="@+id/tv_state_tackback"
                    style="@style/textview_upcoming_dialog"
                    android:text="已收回" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state_approving"
                    style="@style/textview_upcoming_dialog"
                    android:text="审批中" />

                <TextView
                    android:id="@+id/tv_state_checked"
                    style="@style/textview_upcoming_dialog"
                    android:text="已通过" />

                <TextView
                    android:id="@+id/tv_state_disagree"
                    style="@style/textview_upcoming_dialog"
                    android:text="已驳回" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#EFEFEF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:text="申请类型"
            android:textColor="#898989"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign"
                style="@style/textview_upcoming_dialog"
                android:background="@drawable/shape_upcoming_dialog_item_bg_checked"
                android:text="签卡申请"
                android:textColor="@color/color_white" />


            <TextView
                android:id="@+id/tv_travel"
                style="@style/textview_upcoming_dialog"
                android:text="出差申请" />

            <TextView
                android:id="@+id/tv_overtime"
                style="@style/textview_upcoming_dialog"
                android:text="加班申请" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rest"
                style="@style/textview_upcoming_dialog"
                android:text="休假申请" />

            <TextView
                android:id="@+id/tv_office_supplies"
                style="@style/textview_upcoming_dialog"
                android:text="办公用品申请" />

            <TextView
                style="@style/textview_upcoming_dialog"
                android:text="办公用品申请"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_upcoming_dialog_ok"
            android:gravity="center"
            android:text="完成"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>