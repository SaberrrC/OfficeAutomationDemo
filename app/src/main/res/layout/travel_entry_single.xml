<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出差地点 :"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />

        <EditText
            android:id="@+id/et_travel_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/edittext_input_square_bg"
            android:hint="如：天津、北京、上海"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:textColorHint="#9a9090"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间 :"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />

        <TextView
            android:id="@+id/tv_travel_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="点击选择时间"
            android:textColor="@color/text_common_blue_color"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间 :"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />

        <TextView
            android:id="@+id/tv_travel_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="点击选择时间"
            android:textColor="@color/text_common_blue_color"
            android:textSize="14dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出行工具 :"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />

        <EditText
            android:id="@+id/et_travel_tool"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/edittext_input_square_bg"
            android:hint="请输入出差工具"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:textColorHint="#9a9090"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"
            />

    </LinearLayout>
</LinearLayout>