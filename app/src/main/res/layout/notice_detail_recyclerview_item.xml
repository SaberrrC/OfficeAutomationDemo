<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_notice_detail_rv_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
    android:paddingLeft="21dp"
    android:paddingRight="21dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_round_bg">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_notice_detail_rv_item_title_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_notice_detail_rv_item_time"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#656565"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_notice_detail_rv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/tv_notice_detail_rv_item_title_top"
                android:layout_alignBottom="@+id/tv_notice_detail_rv_item_title_top"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#222222"
                android:textSize="14dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_notice_detail_rv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#686868"
            android:textSize="14dp"/>


    </RelativeLayout>
</RelativeLayout>