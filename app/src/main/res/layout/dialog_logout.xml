<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/dialog_logout_bg_x"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确认退出?"
            android:textColor="@color/text_common_blue_color"
            android:textSize="@dimen/text_common_dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="下次需要再次输入帐号"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_blue_round_bg"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="@dimen/text_common_dp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray_round_bg"
            android:text="取消"
            android:textColor="@color/text_common_dark_color"
            android:textSize="@dimen/text_common_dp"/>

    </LinearLayout>

</FrameLayout>