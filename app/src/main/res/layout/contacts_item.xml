<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_contacts_selector_bg_x"
    android:clickable="true">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/portrait"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@drawable/tab_me_head_default"
        fresco:placeholderImageScaleType="fitXY"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/portrait"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#8b8d8d"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/user_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/user_name"
        android:layout_toLeftOf="@+id/select_contact_icon"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#BCBCBC"
        android:textSize="14dp"/>

    <CheckBox
        android:id="@+id/select_contact_icon"
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:focusable="false"
        android:clickable="false"
        android:background="@drawable/select_contact_cb_bg"
         />

    <TextView
        android:id="@+id/user_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/icon"
        android:layout_toRightOf="@id/user_name"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#c5c5c5"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#eaedf7"/>

</RelativeLayout>