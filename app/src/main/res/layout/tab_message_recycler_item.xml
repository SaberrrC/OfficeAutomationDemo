<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_contacts_selector_bg_x"
    android:clickable="true">

    <View
        android:id="@+id/tab_msg_no_read"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab_msg_no_read" />

    <ImageView
        android:id="@+id/tab_msg_mymsg_iv"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:src="@drawable/tab_message_my_msg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tab_msg_mymsg_iv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tab_msg_mymsg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#767676"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tab_msg_mymsg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tab_msg_mymsg_title"
                android:layout_below="@+id/tab_msg_mymsg_title"
                android:layout_marginTop="10dp"
                android:textColor="#27a6db"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tab_msg_mymsg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_msg_mymsg_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tab_msg_mymsg_type"
                android:singleLine="true"
                android:textColor="#767676"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tab_msg_mymsg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="#767676"
                android:textSize="14dp" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tab_msg_mymsg_iv"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:background="#dfdfdf" />
</RelativeLayout>
