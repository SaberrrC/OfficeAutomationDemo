<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <include
        android:id="@+id/toolbar_shadow"
        layout="@layout/toolbar_shadow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            >

            <LinearLayout
                android:id="@+id/ll_begin_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="预计开始时间 :"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <TextView
                    android:id="@+id/tv_overTime_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点击选择时间"
                    android:textColor="#0EA7ED"
                    android:textSize="@dimen/text_common_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/ll_begin_time"
                android:layout_marginTop="14dp"
                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="预计结束时间"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <TextView
                    android:id="@+id/tv_overTime_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点击选择时间"
                    android:textColor="#0EA7ED"
                    android:textSize="@dimen/text_common_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time_stage"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_end_time"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="加班时段 :"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <TextView
                    android:id="@+id/tv_overTime_stage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点击选择"
                    android:textColor="#0EA7ED"
                    android:textSize="@dimen/text_common_dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time_duration"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_time_stage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                >

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="时长(小时) :"
                    android:textColor="#333"
                    android:textSize="@dimen/text_common_dp"
                    />

                <EditText
                    android:id="@+id/tv_overTime_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_input_square_bg"
                    android:focusable="false"
                    android:inputType="number"
                    android:paddingLeft="6dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9a9090"
                    android:textSize="@dimen/text_common_dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_leave_reason_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_time_duration"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="加班事由 :"
                android:textColor="#333"
                android:textSize="@dimen/text_common_dp"
                />


            <EditText
                android:id="@+id/et_overTime_reason"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/tv_leave_reason_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/gray_rectangle_bg"
                android:gravity="left"
                android:hint="请输入内容 (最多100字)"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="#9a9090"
                android:textSize="14dp"
                />


            <Button
                android:id="@+id/btn_voice_input"
                android:layout_width="216dp"
                android:layout_height="34dp"
                android:layout_below="@+id/et_overTime_reason"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_blue_round_bg"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:text="点击进行语音录入"
                android:textColor="@color/white"
                android:textSize="@dimen/text_common_dp"
                />

            <TextView
                android:id="@+id/tv_approval_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_voice_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="审批人 ( 管理员预设 )"
                android:textColor="#333"
                android:textSize="@dimen/text_common_dp"
                />

            <LinearLayout
                android:id="@+id/ll_approval_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_approval_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <include
                    layout="@layout/travel_entry_approvel_single"/>

            </LinearLayout>

            <View
                android:id="@+id/parting_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_approval_container"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#E3E3E3"
                />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="216dp"
                android:layout_height="34dp"
                android:layout_below="@+id/parting_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_blue_round_bg"
                android:text="提 交"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_common_dp"
                />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>