<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fafbfc">

        <ImageView
            android:id="@+id/toobar_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/toolbar_back" />

        <TextView
            android:id="@+id/day_arrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/tab_msg_top_select"
            android:text="@string/day_arrangement"
            android:textColor="#333333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/meet_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="创建"
            android:textSize="18dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rel_title"
        android:background="#F3F3F3" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_time_result"
        android:layout_below="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<TextView
    android:id="@+id/no_meeting"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="无会议安排"
    android:textSize="30dp"
    android:textColor="@color/c_cc"
    android:layout_centerInParent="true"
    />

</RelativeLayout>
