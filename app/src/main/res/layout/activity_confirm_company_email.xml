<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_company_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shanlinjinrong.oa.ui.activity.login.ConfirmCompanyEmailActivity">

    <TextView
        android:id="@+id/tv_confirm_email_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_email_failed"
        android:textColor="@color/red" />


    <LinearLayout
        android:id="@+id/ll_confirm_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_input_square_bg" />

            <AutoCompleteTextView
                android:id="@+id/tv_email_suffix"
                style="?android:editTextStyle"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:background="@drawable/edittext_input_square_bg"
                android:completionThreshold="1"
                android:drawableRight="@drawable/arrow_down"
                android:dropDownHeight="200dp"
                android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="100dp"
        android:layout_height="@dimen/common_height_48"
        android:background="@drawable/write_report_bth_bg_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/common_title_size16" />

</LinearLayout>
