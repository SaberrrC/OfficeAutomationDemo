<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <com.shanlin.common.CommonTopView
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:leftDrawable="@drawable/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/work_report_plan_work" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:background="@color/black_333333" />

                <EditText
                    android:id="@+id/et_plan_work"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="@string/work_report_write_work_plan"
                    android:padding="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/work_report_real_work" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:background="@color/black_333333" />

                <EditText
                    android:id="@+id/et_real_work"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="@string/work_report_write_work_plan"
                    android:padding="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/work_report_self_evaluate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:background="@color/black_333333" />

                <EditText
                    android:id="@+id/et_self_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="@string/work_report_write_work_plan"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>