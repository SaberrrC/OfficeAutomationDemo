<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="30dp"
        >

        <TextView
            android:id="@+id/tv_first_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="密码为初始密码"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"/>

        <TextView
            android:id="@+id/tv_second_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_first_string"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请尽快设置"
            android:textColor="@color/text_common_color"
            android:textSize="@dimen/text_common_dp"/>

        <Button
            android:id="@+id/btn_set_pwd"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_second_string"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_blue_round_bg"
            android:gravity="center"
            android:text="去设置"
            android:textColor="@color/white"
            android:textSize="@dimen/text_common_dp"
            />
    </RelativeLayout>
</FrameLayout>