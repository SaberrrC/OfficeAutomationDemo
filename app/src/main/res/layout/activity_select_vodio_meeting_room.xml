<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shanlin.oa.ui.activity.home.schedule.SelectOrdinaryMeetingRoomActivity">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fafbfc">

        <ImageView
            android:id="@+id/toobar_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_meet_room"
            android:textColor="#333333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/jump_over"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="跳过" />
    </RelativeLayout>

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rel_title"
        android:background="#F3F3F3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_meet_room_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_title" />
</RelativeLayout>
