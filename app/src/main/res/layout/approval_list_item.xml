<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
    >

    <LinearLayout
        android:id="@+id/ll_item_approval_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/launch_approval_state"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#ff5a5a"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="27dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_launch_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_common_dp"
                android:textColor="@color/text_common_color"
                />

            <TextView
                android:id="@+id/tv_launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_launch_type"
                android:layout_marginTop="13dp"
                android:textSize="@dimen/text_common_dp"
                android:textColor="@color/text_common_dark_color"
                />

            <TextView
                android:id="@+id/tv_launch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_common_dp"
                android:textColor="@color/text_common_color"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/parting_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_item_approval_content"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3"
        />
</RelativeLayout>