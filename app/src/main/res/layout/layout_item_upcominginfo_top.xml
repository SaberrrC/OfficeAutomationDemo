<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EFEFEF"/>

    <TextView
        android:id="@+id/tv_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="出差编码"
        android:textColor="#151515"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_id_title"
        android:textColor="#898989"/>


    <LinearLayout
        android:id="@+id/ll_type_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_id"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="* "
            android:textAllCaps="false"
            android:textColor="@color/text_red_color"/>

        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="出差类别"
            android:textColor="#151515"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/shape_upcominginfo_bt_bg"
            android:gravity="center"
            android:minWidth="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/date_selector_icon"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_apply_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_type_all"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:text="申请日期"
        android:textColor="#151515"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_apply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_type_all"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/tv_apply_time_title"
        android:textColor="#898989"
        android:textSize="14sp"/>
</RelativeLayout>