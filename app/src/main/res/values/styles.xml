<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
         <item name="android:windowBackground">@android:color/transparent</item>
         <item name="android:listDivider">@drawable/divider_bg</item>


     </style>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="WeclomeActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog.Loading" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="TabBar_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabBar_icon">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TabBar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/tab_bar_text_gray</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="approvalCustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/page_bg</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_auto_cb_style</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="selectMeetingRoomCustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/select_meeting_room_cb_style</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="home_page_icon_style">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="tab_msg_list_pop_rb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/tab_msg_list_top_pop_rb_tv_selected</item>
        <item name="android:button">@null</item>

    </style>

    <style name="top_filter_pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/top_filter_pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/top_filter_pop_out_anim</item>
    </style>

    <style name="dialog_pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_out_anim</item>
    </style>


    <!--发起工作汇报页面左侧字体样式-->
    <style name="work_report_launch_left_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_333333</item>
    </style>

    <!--发起工作汇报页面左侧字体样式-->
    <style name="work_report_launch_right_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_right</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/work_report_launch_activity_right_text_color</item>
    </style>
</resources>
